/* Estilo para a Janela */
QWidget {
    background-color: #e5e5e5;  /* Cinza claro */
    font-family: Arial, sans-serif;
    font-size: 12pt;
}

/* Texto do titulo (Label) */
#titulo {
    qproperty-alignment: AlignCenter;
    font-family: Verdana;
    font-size: 48pt;
    color: red;
    background-color: blue;
}

#pdfinfo {
    qproperty-alignment: AlignCenter;
    background-color: white;
    padding: 2px;
    font-size: 8pt;
}

/* Caixa de Entrada (LineEdit) */
QLineEdit {
    background-color: #ffffff;
    border: 2px solidrgb(75, 75, 75);
    border-radius: 5px;
    padding: 5px;
    selection-background-color: #009688; /* Destacar texto selecionado */
}

QLineEdit:focus {
    border: 2px solid #007acc; /* Azul quando focado */
}

/* Bot√µes (PushButton) */
QPushButton {
    background-color: #007acc;
    color: white;
    border-radius: 5px;
    padding: 8px;
}

QPushButton:hover {
    background-color: #005fa3; /* Azul mais escuro ao passar o mouse */
}

QPushButton:pressed {
    background-color: #003d73;
}

/* Mensagens Pop-up (MessageBox) */
QMessageBox {
    background-color: #ffffff;
}